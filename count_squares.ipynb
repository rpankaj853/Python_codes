    "n = int(input())\n",
    "print('size of a shape {} * {}'.format(n,n))\n",
    "if n == 1:\n",
    "    \n",
    "    print('Total number of squares in a given shape',n)\n",
    "else:\n",
    "    \n",
    "    for i in range(1 , n+1):\n",
    "        tr  += i ** 2\n",
    "    print('Total number of squares in a given shape',tr)\n",
